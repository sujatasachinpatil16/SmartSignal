{% load static %}


<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
      <title>Smart Signal web app</title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
      <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
      <link rel="stylesheet" type="text/css" href="{% static 'styles/main.css'%}">
      <script type="text/javascript" src="{% static 'components/SmartSignalHeader/smartSignalHeader.js'%}"></script>
      <script type="text/javascript" src="{% static 'components/SmartSignalSidebar/smartSignalSidebarAdmin.js'%}"></script>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/clocklet/css/clocklet.min.css"/>
</head>
  <body>
    <header>
 <smart-signal-header name="{{user.first_name}}" isAuthenticated="{{user.is_authenticated}}"></smart-signal-header>
    <smart-signal-sidebar-admin></smart-signal-sidebar-admin>
<div class="ss-main-container">
	<img class="ss-default-bg" src="/static/images/Ecube_logo.png"/>
<form action="/show_traffic_details" method="POST">
      {% csrf_token %}
      <div>       
            {{ user.first_name }}
            <label for="location">Choose signal:</label>
            <select id="location" name="location">
                {% for client in full_list %}
                    <option value="{{client}}">{{client}}</option>
                {% endfor %}
            </select>
        </div>
        <br> <br>

        <!--Date picker-->
        
        <!--------------->
      <label>Road No : </label>
      <select>
        <option value="road1">Road 1</option>
        <option value="road2">Road 2</option>
        <option value="road3">Road 3</option>
        <option value="road4">Road 4</option>
      </select>
      <br /><br />
      <label>IP Address of Camera : </label>
      <select>
        <option value="camera1">192.168.29.111</option>
        <option value="camera2">192.168.29.112</option>
        <option value="camera3">192.168.29.113</option>
        <option value="camera4">192.168.29.114</option>
      </select>
      <br /><br />
      <label>Priority : </label>
      <select>
        <option value="p1">P1</option>
        <option value="p2">P2</option>
        <option value="p3">P3</option>
        <option value="p4">P4</option>
      </select>
      <br /><br />
      <label><b>Priority Timing : </b></label><br>
      On : <input data-clocklet="format: h:mm a" value="9:00 am">
      Off : <input data-clocklet="format: h:mm a" value="9:00 am">
      <br/><br>
      <!--Default Green Time-->
      <label><b>Default Green Time : </b></label>
      <!--<div>
        <input id="appt-time" type="time" name="appt-time" min="9:00" max="20:00" required />
        <span class="validity"></span>
      </div><br>-->
      <input type="text" name="dgt" size="4"><br><br>
      <!----------------------->
      <label><b>Validity Period : </b></label><br>
      <!--<h5>On : <input data-clocklet="format: h:mm a" value="10 am" /></h5>-->
      <b>On : </b>
      <input id="appt-time" type="time" name="appt-time" min="9:00" max="20:00" required />
      <span class="validity"></span>
      <!--<h5>Off : <input data-clocklet="format: h:mm a" value="10 am" /></h5>-->
      <b>Off :</b>
      <input id="appt-time" type="time" name="appt-time" min="9:00" max="20:00" required />
      <span class="validity"></span>
      <br><br>
      <!--Current Green Time-->
      <label><b>Current Green Time : </b></label>
      <input type="text" name="cgt" size="4">
      <!--<input data-clocklet />
      <input data-clocklet value="12:34" />-->
     <br><br>
     <input type="submit" name="traffic_details" value="show traffic details">
    </form>
    <script src="https://cdn.jsdelivr.net/npm/clocklet"></script></div>

</body>
</html>
