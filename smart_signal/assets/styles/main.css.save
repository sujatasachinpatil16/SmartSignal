        .panel-dropdown .panel-title {
            position: relative;
        }
  .panel-dropdown .panel-body {
            height: 40px;
            line-height: 12px;
            background: lightgray;
        }

        .panel-dropdown .panel-title::after {
            content: "\f107";
            color: #333;
            top: -2px;
            right: 0px;
            position: absolute;
            font-family: "FontAwesome"
        }

        .panel-dropdown .panel-title[aria-expanded="true"]::after {
            content: "\f106";
        }
  .panel-dropdown a:link,
        .panel-dropdown a:visited,
        .panel-dropdown a:hover,
        .panel-dropdown a:active {
            text-decoration: none;
            font-size: 16px;
            color: black;
            height: 30px;
        }
